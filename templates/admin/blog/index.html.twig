{% extends 'base.html.twig' %}

{% block body %}
    <table>
        <thead>
            <tr>
                <th>id</th>
                <th>Titre</th>
                <th>Statut</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.online }}</td>
                <td colspan="2"><a href="{{ path('admin_post_update', {id: post.id}) }}">Editer</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}